{
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "module": "esnext",
    "lib": ["es2020", "dom", "dom.iterable"],
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "rootDir": ".",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "./",
    "paths": {
      "~/*": ["./*"]
    }
  },
  "include": ["pages/**/*"],
  "exclude": ["dist", "node_modules", "public"],
  "compileOnSave": false
}
